<!DOCTYPE html>
<html lang="en">
  <head>
    <title>TO-DO List</title>
    <!-- <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous"> -->
    <link rel="stylesheet" href="styles.css" />
  </head>
  <body>
    <!-- create a container for the todo list -->
    <div id="todo-container">
      <!-- todo list header -->
      <div id="header">
        <h1>To Do List</h1>
      </div>

      <!-- create input box -->
       <form action="/add-task" method="post">
      <div id="todo-form">
        <input
          type="text"
          class="input-item"
          name="task_name"
          id="input-box"
          placeholder="Add Task"
        />

        <!-- add button -->
        <button id="input-button" type="submit">Add</button>
      </div>
    </form>

      <!-- task list -->
      <h2>Task List</h2>
      <ul id="list-container">
       
        <!-- Enclosed this li in loop and fetch already added task -->
        <% fetch_task.forEach(fetch=>{%>
        <li>
            <label>
                <input type="checkbox">
                <span><%= fetch.task %></span>
              </label>
              <!-- Call deleteTask() func onclick -->
              <span 
              class="delete-btn"
              onclick="deleteTask('<%= fetch._id%>')"
              >Delete</span>
        </li>
        <% }) %>
  
      </ul>
    </div>

    <script type="text/javascript" src="script.js"></script>
  </body>
</html>